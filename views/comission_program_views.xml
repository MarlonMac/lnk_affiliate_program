<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="affiliate_program_form_view" model="ir.ui.view">
            <field name="name">affiliate.program.form</field>
            <field name="model">affiliate.program</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="company_id"/>
                            <field name="tipo_comision"/>
                            <field name="valor_comision"/>
                            <field name="descripcion"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="affiliate_program_tree_view" model="ir.ui.view">
            <field name="name">affiliate.program.tree</field>
            <field name="model">affiliate.program</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="company_id"/>
                    <field name="tipo_comision"/>
                    <field name="valor_comision"/>
                </tree>
            </field>
        </record>

        <record id="action_affiliate_program" model="ir.actions.act_window">
            <field name="name">Programas de Comisión</field>
            <field name="res_model">affiliate.program</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Programas de Comisión" id="affiliate_program_menu_2" parent="affiliate_program_menu" action="action_affiliate_program"/>
    </data>
</odoo>