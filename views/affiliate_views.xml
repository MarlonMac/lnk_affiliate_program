<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="affiliate_affiliate_form_view" model="ir.ui.view">
            <field name="name">affiliate.affiliate.form</field>
            <field name="model">affiliate.affiliate</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="email"/>
                            <field name="company_id"/>
                            <field name="program_id"/>
                            <field name="enlace_afiliado" readonly="1"/> 
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="affiliate_affiliate_tree_view" model="ir.ui.view">
            <field name="name">affiliate.affiliate.tree</field>
            <field name="model">affiliate.affiliate</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="company_id"/>
                    <field name="program_id"/>
                </tree>
            </field>
        </record>

        <record id="action_affiliate_affiliate" model="ir.actions.act_window">
            <field name="name">Afiliados</field>
            <field name="res_model">affiliate.affiliate</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Afiliados" id="lnk_affiliate_program_menu" parent="contacts" action="action_affiliate_affiliate" sequence="10"/>
    </data>
</odoo>